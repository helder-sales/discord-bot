{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "types": [
      "jest",
      "node"
    ],
    "outDir": "./dist",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
